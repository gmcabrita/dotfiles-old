#!/bin/bash

focused="%{U#FFcc6666+u}----------%{U-}"
active="%{U#FF707880+u}----------%{U-}"
normal="%{U#FF282a2e+u}----------%{U-}"
res=`sres -W`

desktops() {
    desktops=""
    for e in $(echo $1 | cut -d':' -f2-6 | tr ':' '\n')
    do
        if [ "${e:0:1}" == "O" ]; then
            desktops="$desktops $focused"
        elif [ "${e:0:1}" == "F" ]; then
            desktops="$desktops $focused"
        elif [ "${e:0:1}" == "o" ]; then
            desktops="$desktops $active"
        else
            desktops="$desktops $normal"
        fi
    done
    echo $desktops
}

bspc subscribe | \
while read -r line ; do

    # skip messages for other monitors
    [ $( echo $line | grep "^WM$MONITOR" ) ] || continue

    output=$(desktops $line)
    echo "%{c}$output%{r}"
done | lemonbar -bp -g "$resx18" -u 10 -F "#00000000" -B "#00000000"
